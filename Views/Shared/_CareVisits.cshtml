<div class="modal fade" id="careVisit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Patient Information</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Your modal content goes here -->
                <div class="card px-lg-4 mb-2">
                    <div class="row mt-3">
                        <div class="form-group col-md-6">
                            <label><b>First Name:</b></label>
                            <div class="col-md-10">
                                <label id="modalPName"></label>

                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            <label><b>Surname</b></label>
                            <div class="col-md-10">
                                <label id="modalPSurname"></label>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="form-group col-md-6">
                            <label><b>Wound Description</b></label>
                            <div class="col-md-10">
                                <label id="modalWound"></label>
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            <label><b>Client Number</b></label>
                            <div class="col-md-10">
                                <label id="modalCellNo"></label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
