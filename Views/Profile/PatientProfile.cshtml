@model Patient
@{
    ViewData["Title"] = "Details";
}
<div class="container md-6">
    <center><h2>Profile</h2></center>
    <br />
</div>
<div class="card px-lg-4 mb-2">
<form asp-action="Update">
    <div class="row mt-3">
        <div class="form-group col-md-6">
            <label><b>First Name</b></label>
            <div class="col-md-10">
                <input asp-for="PatientName" class="form-control" />
            </div>
        </div>

        <div class="form-group col-md-6">
            <label><b>Surname</b></label>
            <div class="col-md-10">
                <input asp-for="Surname" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="form-group col-md-6">
            <label><b>ID Number</b></label>
            <div class="col-md-10">
                <input asp-for="Idno" class="form-control" />
            </div>
        </div>

        <div class="form-group col-md-6">
            <label><b>Date of Birth</b></label>
            <div class="col-md-10">
                <input asp-for="Dob" class="form-control"  />
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="form-group col-md-6">
            <label><b>Emergency Personel Name</b></label>
            <div class="col-md-10">
                <input asp-for="EmergencyContact" class="form-control" />
            </div>
        </div>

        <div class="form-group col-md-6">
            <label><b>Emergency Personel Number</b></label>
            <div class="col-md-10">
                <input asp-for="EmergencyNumber" class="form-control" />
            </div>
        </div>
    </div>
    <br />
    <input type="submit" value="Create" class="btn btn-primary" />
</form>
</div>
