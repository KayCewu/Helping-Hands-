@model VisitInfo
@{
    ViewData["Title"] = "Create Care Visit";
}
<script type='text/javascript' src='https://www.bing.com/api/maps/mapcontrol?branch=release&callback=InitBingMap' async defer></script>
<form asp-action="CreateCareVisit">
    <div class="row">
        <div class="row mt-3">
            <div class="form-group col-md-6">
                <label><b>Visit Date</b></label>
                <div class="col-md-10">
                    <input asp-for="VisitDate" class="form-control" />
                    <span asp-validation-for="VisitDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group col-md-6">
                <label><b>Approximate Arrival Time</b></label>
                <div class="col-md-10">
                    <input asp-for="ApproxArrivalTime" class="form-control" />
                    <span asp-validation-for="ApproxArrivalTime" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group col-md-2">
            <input type="submit" value="Create Care Visit" class="btn btn-primary" />
        </div>
    </div>
</form>
<div id="myMap" style="width:100%;height:325px;"></div>
<script>
    function InitBingMap() {
        var map = new Microsoft.Maps.Map(document.getElementById('myMap'), {
            credentials: "AvBt46d3bz89jmPo4R1X6IVPK6foO2-dTX5BYeKDEp0Bksswgg0jg0tj_V3TGRNz",

        });

        map.setView({
            center: new Microsoft.Maps.Location(-33.9463123, 25.572034),
            zoom: 16
        });

        var loc = new Microsoft.Maps.Location(
            -33.9463123,
            25.572034);

        //Add a pushpin at the user's location.
        var pin = new Microsoft.Maps.Pushpin(loc);
        map.entities.push(pin);
    }
</script>
