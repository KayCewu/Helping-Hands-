@model VisitInfo
@{
    ViewData["Title"] = "Create Care Visit";
}
<form asp-action="Create">
    <div class="row">
        <div class="row mt-3">
            <div class="form-group col-md-6">
                <label><b>Visit Date</b></label>
                <div class="col-md-10">
                    <input asp-for="VisitDate" class="form-control" />
                    <span asp-validation-for="VisitDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group col-md-6">
                <label><b>Approximate Arrival Time</b></label>
                <div class="col-md-10">
                    <input asp-for="ApproxArrivalTime" class="form-control" />
                    <span asp-validation-for="ApproxArrivalTime" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group col-md-2">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>