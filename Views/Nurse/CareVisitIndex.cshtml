@using Helping_Hands_2._0.Models
@model IEnumerable<VisitInfo>
@{
    ViewData["Title"] = "Care Visits";
}
<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
</head>
<body>

    <div class="container md-6">
        <h2>My Care Visits</h2>
    </div>
    <br />
    <br />
    <div class="card bg-light">
        <br />
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th>Visit Date</th>
                    <th>Approximate Arrival Time</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var visit in Model)
                {
                    <tr>
                        <td>@visit.VisitDate</td>
                        <td>@visit.ApproxArrivalTime</td>
                        <td>
                            <input class="btn btn-info btn-sm" value="Update" data-bs-toggle="tooltip" title="y" onclick="location.href='@Url.Action("Update","Conditions", new{id=visit.VisitId})'" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script>
    let table = new DataTable('#myTable');
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl)
    })
</script>
